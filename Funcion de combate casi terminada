#include <stdio.h>
#include <stdlib.h>
#define LONG 16
typedef struct
{
	int espada;
	char nombespada;
	int armadura; 
	char nombarmadura;
	int escudo;
	char nombescudo;
	int dinero;
	int pociones;
} Inventario;
typedef struct
{
	char nombre[LONG];
	int atk;
	int hp; 
	int hpactual;
} Personaje;
typedef struct
{
	char nombre[LONG];
	int atkmons;
	int hpmons;
	int hpactualmons;
} Enemigo;
int combate (Personaje *pe, Enemigo *mo, Inventario *inv);
int main(void)
{
Personaje pe;
Enemigo mo;
Inventario inv;
inv.pociones=1;
pe.hp=pe.hpactual=15;
mo.hpactualmons=15;
pe.atk=3;
inv.espada=0;
mo.atkmons=2;
pe.hpactual=combate(&pe,&mo,&inv);
printf("%d",pe.hpactual);
system("PAUSE");
return 0;
}
int combate (Personaje *pe, Enemigo *mo, Inventario *inv)
{
int n;
	do
	{
	  do
	  {
		do
		{
	       printf("Pulsa 1 para atacar, 2 para usar una pocion\n");
	       scanf("%d",&n);
	       fflush(stdin);
	    } while(n!=1 && n!=2);
	    switch (n)
	    {
	    case 1:
	    {
	       (*mo).hpactualmons=(*mo).hpactualmons-(*pe).atk-(*inv).espada;
	       if((*mo).hpactualmons==0)
	       {
	       printf("!!!!Has ganado el conbate enhorabuena!!!!\n");
           }
           else
           {
           (*pe).hpactual=(*pe).hpactual-(*mo).atkmons;
           if((*pe).hpactual==0)
           {
      	   printf("Has sido derrotado");
	       }
	       printf("Vida actual: %d Vida del enemigo %d\n",(*pe).hpactual,(*mo).hpactualmons);
	       }
        } break;   
	    case 2:
	    {
		   if((*inv).pociones!=0)
		   {
	       (*pe).hpactual=(*pe).hpactual+10;
	       (*inv).pociones--;
	       (*pe).hpactual=(*pe).hpactual-(*mo).atkmons;
	       printf("Vida actual: %d Vida del enemigo %d\n",(*pe).hpactual,(*mo).hpactualmons);
	       }
	       else
	       printf("No te quedan pociones\n");
        }
        }
      } while ((*inv).pociones==0 && n==2);	
	} while((*pe).hpactual!=0 || (*mo).hpactualmons!=0);
	return (*pe).hpactual;
}
